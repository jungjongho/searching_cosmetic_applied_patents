# 환경 변수 설정 파일
# 이 파일을 .env로 복사하고 실제 값을 입력하세요

# KIPRIS API 설정
SERVICE_KEY=''
BASE_URL=http://plus.kipris.or.kr/kipo-api/kipi/patUtiModInfoSearchSevice
TIMEOUT=30

# 검색 설정
SEARCH_KEYWORD=조성물
RIGHT_HOLDER=코스맥스 주식회사
RIGHT_HOLDER_CODE=120140131250
MAX_PATENTS=20
PAGE_SIZE=100
DELAY=1.0

# 출력 설정
OUTPUT_DIR=patent_results
SAVE_SEARCH_RESULTS=true
SAVE_CLAIMS=true
DOWNLOAD_PDFS=true

# 애플리케이션 설정
APP_NAME=화장품 특허 검색 API
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
